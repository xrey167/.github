{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Model Context Protocol Configuration",
  "description": "MCP configuration for extending GitHub Copilot with custom context providers",
  "version": "1.0.0",
  "mcpServers": {
    "github": {
      "command": "gh",
      "args": ["mcp", "serve"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-filesystem/dist/index.js"],
      "env": {
        "ALLOWED_PATHS": "${workspaceFolder}"
      }
    },
    "git": {
      "command": "node",
      "args": ["node_modules/@modelcontextprotocol/server-git/dist/index.js"],
      "env": {
        "GIT_REPO_PATH": "${workspaceFolder}"
      }
    }
  },
  "contextProviders": [
    {
      "name": "repository-context",
      "description": "Provides context about the current repository",
      "enabled": true,
      "sources": [
        "README.md",
        "CONTRIBUTING.md",
        "docs/**/*.md",
        ".github/**/*.md"
      ]
    },
    {
      "name": "code-conventions",
      "description": "Project-specific coding conventions and patterns",
      "enabled": true,
      "sources": [
        ".github/copilot-instructions.md",
        ".github/agents/agent.md"
      ]
    },
    {
      "name": "api-documentation",
      "description": "API documentation and schemas",
      "enabled": true,
      "sources": [
        "docs/api/**/*.md",
        "openapi.yaml",
        "swagger.json"
      ]
    }
  ],
  "tools": [
    {
      "name": "search-codebase",
      "description": "Search for code patterns in the repository",
      "enabled": true
    },
    {
      "name": "run-tests",
      "description": "Execute test suites",
      "enabled": true
    },
    {
      "name": "lint-code",
      "description": "Run linters and formatters",
      "enabled": true
    },
    {
      "name": "analyze-dependencies",
      "description": "Analyze and suggest dependency updates",
      "enabled": true
    }
  ],
  "features": {
    "codeCompletion": {
      "enabled": true,
      "languages": ["python", "typescript", "javascript", "json", "yaml", "markdown"]
    },
    "codeReview": {
      "enabled": true,
      "autoReview": false,
      "checkSecurity": true,
      "checkPerformance": true,
      "checkBestPractices": true
    },
    "documentation": {
      "enabled": true,
      "autoGenerate": false,
      "format": "markdown"
    },
    "refactoring": {
      "enabled": true,
      "suggestImprovements": true
    }
  },
  "integrations": {
    "openai": {
      "enabled": true,
      "models": ["gpt-4", "gpt-4-turbo-preview", "gpt-3.5-turbo"],
      "defaultModel": "gpt-4-turbo-preview",
      "apiKeyEnv": "OPENAI_API_KEY"
    },
    "anthropic": {
      "enabled": true,
      "models": ["claude-3-opus-20240229", "claude-3-sonnet-20240229", "claude-3-haiku-20240307"],
      "defaultModel": "claude-3-sonnet-20240229",
      "apiKeyEnv": "ANTHROPIC_API_KEY"
    },
    "google": {
      "enabled": true,
      "models": ["gemini-pro", "gemini-pro-vision"],
      "defaultModel": "gemini-pro",
      "apiKeyEnv": "GOOGLE_API_KEY"
    }
  }
}
