{
  "$schema": "https://json.schemastore.org/github-copilot-environment.json",
  "description": "Development environment configuration for GitHub Copilot Coding Agent",
  "packages": {
    "python": [
      "openai>=1.0.0",
      "anthropic>=0.18.0",
      "google-generativeai>=0.3.0",
      "pytest>=7.0.0",
      "black>=23.0.0",
      "pylint>=2.17.0",
      "mypy>=1.0.0",
      "requests>=2.31.0",
      "python-dotenv>=1.0.0",
      "pydantic>=2.0.0"
    ],
    "npm": [
      "openai@^4.0.0",
      "@anthropic-ai/sdk@^0.18.0",
      "@google/generative-ai@^0.3.0",
      "typescript@^5.0.0",
      "@types/node@^20.0.0",
      "jest@^29.0.0",
      "@types/jest@^29.0.0",
      "eslint@^8.0.0",
      "prettier@^3.0.0",
      "dotenv@^16.0.0"
    ],
    "system": [
      "git",
      "gh",
      "curl",
      "jq"
    ]
  },
  "environment": {
    "PYTHONPATH": "${workspaceFolder}/src",
    "NODE_ENV": "development"
  },
  "scripts": {
    "setup": [
      "pip install --upgrade pip",
      "npm install -g npm@latest",
      "gh extension install github/gh-copilot"
    ],
    "python-setup": [
      "python -m venv venv",
      "source venv/bin/activate || venv\\Scripts\\activate",
      "pip install -r requirements.txt",
      "pip install -e ."
    ],
    "typescript-setup": [
      "npm install",
      "npm run build"
    ],
    "test-python": [
      "pytest tests/ -v --cov"
    ],
    "test-typescript": [
      "npm test"
    ],
    "lint-python": [
      "black --check .",
      "pylint src/",
      "mypy src/"
    ],
    "lint-typescript": [
      "eslint src/",
      "prettier --check src/"
    ]
  },
  "tools": {
    "cli": [
      {
        "name": "gh",
        "description": "GitHub CLI for Copilot integration",
        "install": "gh extension install github/gh-copilot"
      },
      {
        "name": "openai",
        "description": "OpenAI CLI for Codex access",
        "install": "pip install openai"
      }
    ]
  }
}
